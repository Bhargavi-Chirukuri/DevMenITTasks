<Page
    x:Class="task27_10_15.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:task27_10_15"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="unametxt" HorizontalAlignment="Left" Margin="481,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="93" Width="313" PlaceholderText="Enter Username" FontSize="35"/>
        <Button x:Name="loginbtn" Content="Login" HorizontalAlignment="Left" Margin="549,410,0,0" VerticalAlignment="Top" Height="92" Width="172" FontSize="35" Click="loginbtn_Click"/>
        <PasswordBox x:Name="pwdtxt" HorizontalAlignment="Left" Margin="481,248,0,0" VerticalAlignment="Top" Height="98" Width="313" FontSize="35" PlaceholderText="Enter Password"/>
        <Button x:Name="Rbtn" Content="Not a Registerd user?" HorizontalAlignment="Left" Margin="772,434,0,0" VerticalAlignment="Top" Width="307" FontSize="20" BorderThickness="0" Click="Rbtn_Click"/>

    </Grid>
</Page>
